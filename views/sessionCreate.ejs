<!-- views/sessionCreate.ejs -->
<h3>Create Session</h3>
<form action="/create-session" method="POST">
  <div class="form-group">
    <label for="sport">Sport:</label>
    <select id="sport" name="sport" required>
      <option value="">Select a sport</option>
      <% sports.forEach(function(sport) { %>
        <option value="<%= sport.id %>"><%= sport.name %></option>
      <% }) %>
    </select>
  </div>
  <div class="form-group">
    <label for="date">Date:</label>
    <input type="date" id="date" name="date" required>
  </div>
  <div class="form-group">
    <label for="time">Time:</label>
    <input type="time" id="time" name="time" required>
  </div>
  <div class="form-group">
    <label for="venue">Venue:</label>
    <input type="text" id="venue" name="venue" required>
  </div>
  <div class="form-group">
    <label for="additionalPlayersNeeded">Additional Players Needed:</label>
    <input type="number" id="additionalPlayersNeeded" name="additionalPlayersNeeded" min="0" required>
  </div>
  <button type="submit" class="button">Create Session</button>
</form>
